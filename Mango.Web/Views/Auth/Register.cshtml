@model RegisterRequestDto

<form asp-action="Register">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <hr />
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" class="form-control" placeholder="UserName..." />
                <span asp-validation-for="UserName" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." type="password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <select asp-for="RoleName" class="form-select" asp-items="@ViewBag.Roles">
                    <option disabled selected>--Select Role--</option>
                </select>
                <span asp-validation-for="RoleName" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" value="Register" class="form-control btn btn-primary">Register</button>
            </div>
        </div>
    </div>
</form>