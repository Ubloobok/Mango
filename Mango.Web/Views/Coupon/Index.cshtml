@model IEnumerable<CouponDto>
@{
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Coupons List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["Error"]
                    </div>
                }
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-outline-primary">
                    Create New Coupon
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Discout</th>
                    <th>Minimum</th>
                    <th>-</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CouponCode</td>
                        <td>@item.DiscountAmount</td>
                        <td>@item.MinAmount</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CouponId" class="btn btn-primary">Edit</a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.CouponId" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this coupon?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
